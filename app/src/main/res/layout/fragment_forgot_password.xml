<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.fragments.ForgotPasswordFragment"
    android:padding="30dp">

    <TextView
        android:id="@+id/forgottoptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Please write Email that you want reset password"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <EditText
        android:id="@+id/forgotemailinput"
        android:layout_width="343dp"
        android:layout_height="42dp"
        android:hint="Email"
        android:drawableLeft="@drawable/baseline_email_24"
        android:background="@drawable/inpt1"
        android:layout_below="@id/forgottoptext"
        android:layout_marginTop="25dp"
        />

    <Button
        android:id="@+id/forgotsendbutton"
        android:layout_width="343dp"
        android:layout_height="42dp"
        android:layout_below="@id/forgotemailinput"
        android:layout_marginTop="25dp"
        android:text="Reset"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@drawable/btn1"/>


</RelativeLayout>